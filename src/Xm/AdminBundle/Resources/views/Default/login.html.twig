{% extends "XmAdminBundle:Layout:base_single.html.twig" %}
{% block content %}
<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>小马教育</b>管理后台</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">输入用户名密码登录</p>
        {% set msgs = app.session.flashbag.get('error') %}
        {% if msgs and box == 'login' %}
            <div class="alert alert-error">
                <strong>
                    <i class="icon-remove"></i>
                </strong>

                {% for msg in msgs  %}
                    {{ msg }}
                    <br />
                {% endfor %}
            </div>
        {% endif %}
        <form id="login_form" action="{{ path('admin_login') }}" method="POST">
            <div class="form-group has-feedback">
                <input type="text" name="username" class="form-control" placeholder="用户名">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" name="password" class="form-control" placeholder="密码">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> 自动登录
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button name="submit" type="submit" class="btn btn-primary btn-block btn-flat form_submit">登录</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <!-- /.social-auth-links -->
        <a href="#">忘记密码</a><br>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
{% endblock %}